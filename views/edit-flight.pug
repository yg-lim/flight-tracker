extends layout

block main
  h2 Edit Flight
  form(action=`/flights/${flight.id}/delete` method="POST" id="delete-form") 
    input(type="hidden" name="delete" id="delete")
    input(type="submit" value="Delete Flight")
  form(action=`/flights/${flight.id}/edit` method="POST" id="edit-form")
    fieldset
      dl(class="departureCode")
        dt
          label(for="departureCode") Departure Airport
        dd
          input(type="text" name="departureCode" id="departureCode" value=flight.departureCode)
      dl(class="destinationCode")
        dt
          label(for="destinationCode") Destination Airport
        dd
          input(type="text" name="destinationCode" id="destinationCode" value=flight.destinationCode)
      dl
        dt
          label(for="airline") Airline
        dd
          input(type="text" name="airline" id="airline" value=flight.airline)
      dl(class="full-width")
        dt
          label(for="flightNumber") Flight Number
        dd
          input(type="text" name="flightNumber" id="flightNumber" value=flight.flightNumber)
      dl(class="full-width")
        dt
          label(for="flightTime") Flight Time
        dd
          input(type="datetime" name="flightTime" id="flightTime" value=flight.flightTime)
    fieldset(class="buttons")
      a(href="/") Go back
      input(type="submit" value="Save Changes")
